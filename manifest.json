{
  "name": "Virgin Trains Booking Automation",
  "description": "Chrome extension to speed up booking tickets on the Virgin Trains site.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.buytickets.virgintrains.co.uk/buytickets/shoppingbasket.aspx"],
      "js": ["shoppingbasket.js"]
    },
    {
      "matches": ["https://www.buytickets.virgintrains.co.uk/buytickets/travelessentials.aspx"],
      "js": ["travelessentials.js"]
    }

  ],
   "manifest_version": 2
}